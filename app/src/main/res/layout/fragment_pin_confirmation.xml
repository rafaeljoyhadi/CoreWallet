<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input 6-digits PIN"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Kolom Input PIN -->
    <LinearLayout
        android:id="@+id/pinContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <!-- Kolom PIN -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Kolom Pertama -->
            <EditText
                android:id="@+id/pin1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle_border"
                android:textColor="@color/secondary_gray"
                android:textSize="20sp"
                android:cursorVisible="false"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@id/pin2" />

            <!-- Kolom Kedua -->
            <EditText
                android:id="@+id/pin2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle_border"
                android:textColor="@color/secondary_gray"
                android:textSize="20sp"
                android:cursorVisible="false"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@id/pin3" />

            <!-- Kolom Ketiga -->
            <EditText
                android:id="@+id/pin3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle_border"
                android:textColor="@color/secondary_gray"
                android:textSize="20sp"
                android:cursorVisible="false"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@id/pin4" />

            <!-- Kolom Keempat -->
            <EditText
                android:id="@+id/pin4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle_border"
                android:textColor="@color/secondary_gray"
                android:textSize="20sp"
                android:cursorVisible="false"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@id/pin5" />

            <!-- Kolom Kelima -->
            <EditText
                android:id="@+id/pin5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle_border"
                android:textColor="@color/secondary_gray"
                android:textSize="20sp"
                android:cursorVisible="false"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@id/pin6" />

            <!-- Kolom Keenam -->
            <EditText
                android:id="@+id/pin6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle_border"
                android:textColor="@color/secondary_gray"
                android:cursorVisible="false"
                android:textSize="20sp"
                android:focusableInTouchMode="true" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>