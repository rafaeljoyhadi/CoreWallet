<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.main.MainActivity">

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <!-- Input Field -->
        <EditText
            android:id="@+id/editText_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter Receiver Account No."
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:importantForAutofill="no"
            android:padding="16dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/button_add_beneficiary"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/rounded_corners_rectangle_pb"
            android:padding="8dp"
            android:text="Add to Beneficiary List"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>

